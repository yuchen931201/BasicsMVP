<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="MultipleStatusView">
        <attr name="app_loadingView" format="reference"/>
        <attr name="app_errorView" format="reference"/>
        <attr name="app_emptyView" format="reference"/>
        <attr name="app_noNetworkView" format="reference"/>
        <attr name="app_contentView" format="reference"/>
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="type" />
        <attr name="borderColor" />
        <attr name="borderWidth" />
        <attr name="rectRoundRadius" />
    </declare-styleable>

    <!-- 自定义折叠 TextView  -->
    <declare-styleable name="ExpandableTextView">
        <attr name="maxCollapsedLines" format="integer" />
        <attr name="animDuration" format="integer" />
        <attr name="animAlphaStart" format="float" />
        <attr name="expandDrawable" format="reference" />
        <attr name="collapseDrawable" format="reference" />
    </declare-styleable>

    <declare-styleable name="ArrowHeader">
        <attr name="bowColor" format="color" />
        <attr name="arrowColor" format="color" />
        <attr name="stringColor" format="color" />
        <attr name="lineColor" format="color" />
        <attr name="bowLength" format="dimension" />
    </declare-styleable>

</resources>